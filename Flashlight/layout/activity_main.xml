<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Switch
            android:text="플래시 on/off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/flashSwitch"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/timeSeekBar" android:layout_marginTop="130dp"
            app:layout_constraintTop_toBottomOf="@+id/flashSwitch" android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp" android:max="9" android:progress="0"/>
    <Button
            android:text="시작/정지"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/startButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/timeSeekBar"/>
</android.support.constraint.ConstraintLayout>