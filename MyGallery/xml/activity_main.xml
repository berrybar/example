<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/gallery" android:id="@+id/backImage"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/galleryText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp" android:layout_marginTop="342dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="이동"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pushButton" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/galleryText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="150dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>
</android.support.constraint.ConstraintLayout>