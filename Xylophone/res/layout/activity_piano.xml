<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pianoActivity"
        tools:ignor="ContentDescription">

    <TextView
            android:text="도"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            android:id="@+id/do1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="bottom|center" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/re1" app:layout_constraintHorizontal_chainStyle="packed"/>
    <TextView
            android:text="레"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            android:id="@+id/re1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="bottom|center" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/do1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/mi"/>
    <TextView
            android:text="미"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            android:id="@+id/mi" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="bottom|center" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/re1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/fa1"/>
    <TextView
            android:text="파"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            android:id="@+id/fa1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="bottom|center" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/mi" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/sol1"/>
    <TextView
            android:text="솔"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            android:id="@+id/sol1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="bottom|center" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/fa1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/la1"/>
    <TextView
            android:text="라"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            android:id="@+id/la1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="bottom|center" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/sol1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/si"/>
    <TextView
            android:text="시"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            android:id="@+id/si" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="bottom|center" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/la1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/do3"/>
    <TextView
            android:text="도"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            android:id="@+id/do3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="bottom|center" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/si" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="도#"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/do2"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="@android:color/white"
            android:background="@android:color/black" android:gravity="bottom|center" android:layout_marginStart="35dp"
            app:layout_constraintStart_toStartOf="@+id/do1" android:layout_marginBottom="150dp"/>
    <TextView
            android:text="레#"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/re2"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="@android:color/white"
            android:background="@android:color/black" android:gravity="bottom|center"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="35dp"
            app:layout_constraintEnd_toEndOf="@+id/mi"/>
    <TextView
            android:text="파#"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/fa2"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="@android:color/white"
            android:background="@android:color/black" android:gravity="bottom|center"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/mi" android:layout_marginStart="35dp"/>
    <TextView
            android:text="솔#"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/sol2"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="@android:color/white"
            android:background="@android:color/black" android:gravity="bottom|center"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/fa1" android:layout_marginStart="45dp"/>
    <TextView
            android:text="라#"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/la2"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="@android:color/white"
            android:background="@android:color/black" android:gravity="bottom|center"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="35dp" app:layout_constraintEnd_toEndOf="@+id/si"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_fiber_manual_record_black_24dp"
            android:id="@+id/recordButton"
            android:tint="@android:color/holo_red_dark" style="@android:style/Widget.ImageButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/playButton" app:layout_constraintStart_toEndOf="@+id/do3"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_play_arrow_black_24dp"
            android:id="@+id/playButton"
            style="@android:style/Widget.ImageButton"
            app:layout_constraintTop_toBottomOf="@+id/recordButton"
            app:layout_constraintBottom_toTopOf="@+id/stopButton" app:layout_constraintStart_toEndOf="@+id/do3"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_stop_black_24dp"
            android:id="@+id/stopButton"
            style="@android:style/Widget.ImageButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playButton" app:layout_constraintStart_toEndOf="@+id/do3"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>